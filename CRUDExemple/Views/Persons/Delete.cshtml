@model PersonResponse

@{
	ViewBag.Title = "Delete Person";
}


<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to home</a>
<h2>Delete Person</h2>


<div class="ceter-box">
	<form asp-controller="Person" asp-action="Edit" method="post">

		<input type="hidden" asp-for="PersonId"/>

		@*PersonName*@
		<div class = "form-field flex">
			<div class="w-25">
				<label asp-for="Name" class="form-label pt">Person Name</label>
			</div>
			<div class="flex-1">
				@* <input type="text" id="Name" name="Name"
					class="form-input"/> *@

				<input asp-for="Name" class="form-input" disabled="disabled"/>
				<span asp-validation-for="Name" class="text-red"></span>
			</div>

		</div>



		@*Email*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="Email" class="form-label pt">Email</label>
				
			</div>
			<div class="flex-1">
				@* <input type="email" id="Email" name="Email"
					   class="form-input" /> *@
				<input asp-for="Email" class="form-input" disabled="disabled" />
				<span asp-validation-for="Email" class="text-red"></span>
			</div>

		</div>



		@*Submit*@

		<div class="form-field flex">
			<div class="w-25">
				
			</div>
			<div class="flex-1">
				<button class="button button-red-back">Delete</button>

				<div asp-validation-summary="All" class="text-red"></div>
				@if (ViewBag.Errors != null)
				{
					
					<div class="text-red ml">
						<ul>
						
							@foreach (string str in ViewBag.Errors)
						{
							<li class="ml">@str</li>
						}

						</ul>
					</div>

				}
			</div>
		</div>

	</form>
</div>
