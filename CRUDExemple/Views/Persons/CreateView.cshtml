@model PersonAddRequest

@{
	ViewBag.Title = "Create Person";
}


<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to home</a>
<h2>Crete Person</h2>

<div class="ceter-box">
	<form asp-controller="Person" asp-action="Create" method="post">
		
		@*PersonName*@
		<div class = "form-field flex">
			<div class="w-25">
				<label asp-for="Name" class="form-label pt">Person Name</label>
			</div>
			<div class="flex-1">
				@* <input type="text" id="Name" name="Name"
					class="form-input"/> *@

				<input asp-for="Name" class="form-input"/>
				<span asp-validation-for="Name" class="text-red"></span>
			</div>

		</div>



		@*Email*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="Email" class="form-label pt">Email</label>
				
			</div>
			<div class="flex-1">
				@* <input type="email" id="Email" name="Email"
					   class="form-input" /> *@
				<input asp-for="Email" class="form-input" />
				<span asp-validation-for="Email" class="text-red"></span>
			</div>

		</div>


		@*DayeOfBirth*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="DataOfBirth" class="form-label pt">Date of birth</label>
			</div>
			<div class="flex-1">
				<input asp-for="DataOfBirth" class="form-input" />
				<span asp-validation-for="DataOfBirth" class="text-red"></span>
			</div>
		</div>


		@*Gender*@
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt">Gender</label>
			</div>
			<div class="flex-1">
				@{
					string[] genders = (string[])Enum.GetNames(typeof(GenderOption));
				}
				@{
					foreach(string gender in genders)
					{
						<input type="radio" asp-for="Gender" value="@gender" />
						
						<lable for="@gender">@gender</lable>
					}
				}
				<span asp-validation-for="Gender" class="text-red"></span>
				
				@*
				
				<input type="radio" id="Female" name="Gender" value="Female" class="ml" />
				<lable for="Female">Female</lable>

				<input type="radio" id="Other" name="Gender" value="Other" class="ml" />
				<lable for="Other">Other</lable> *@
			</div>
		</div>


		@*Address*@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Address" class="form-label pt">Address</label>
			</div>
			<div class="flex-1">
				<textarea asp-for="Address" class="form-input"></textarea> 
				<span asp-validation-for="Address" class="text-red"></span>
			</div>
		</div>


		@*Receive News Letters*@
		<div class="form-field flex">
			<div class="w-25">				
			</div>
			<div class="flex-1">
				<input asp-for="ReceiveNewsLetters" value="true" />				
				<lable for="ReceiveNewsLetters" class="form-label">Receive News Letters</lable>
				<span asp-validation-for="ReceiveNewsLetters" class="text-red"></span>
			</div>
		</div>

		@*Submit*@

		<div class="form-field flex">
			<div class="w-25">
				
			</div>
			<div class="flex-1">
				<button class="button button-green-back">Submit</button>

				<div asp-validation-summary="All" class="text-red"></div>
				@if (ViewBag.Errors != null)
				{
					
					<div class="text-red ml">
						<ul>
						
							@foreach (string str in ViewBag.Errors)
						{
							<li class="ml">@str</li>
						}

						</ul>
					</div>

				}
			</div>
		</div>

	</form>
</div>
@section scripts{
	@* за цими посиланнями запускається js файли які аиконують перевірки на сервері якщо вони не проходять то у вкалдці Network нічого не відображаться і програма дарама не проганяється 
	Якщо посилання не зможе відкритися відкриється файл який розміщений в wwwroot та вказаний в asp-fallback-src
	*@
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobtrusive" asp-fallback-src="jquery.validate.unobtrusive.min.js"></script>
}